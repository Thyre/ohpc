#!/bin/bash
# -*-sh-*-

TEST_LOGS=""
MAKEFLAGS=""
status=0

source ./common/TEST_ENV  || exit 1
source ./common/functions || exit 1

cd perf-tools/scorep || exit 1
export BATS_JUNIT_CLASS=Score-P
export SCAN_MPI_LAUNCHER=prun

# bootstrap the local autotools project if necessary
./bootstrap || exit 1

for compiler in $COMPILER_FAMILIES ; do
    if [ "$compiler" == "arm1" ]; then
	continue
    fi
    for mpi in $MPI_FAMILIES ; do

	echo " "
	echo " "
	echo "-------------------------------------------------------"
	echo "Libraries: Score-P tests: $compiler-$mpi"
	echo "-------------------------------------------------------"

	module purge          || exit 1
    	module load prun      || exit 1
	module load $compiler || exit 1
	module load $mpi      || exit 1
	module load scorep    || exit 1

	./configure           || exit 1
	make clean            || exit 1
	make -k check         || status=1

    	save_logs_mpi_family tests $compiler $mpi

	make distclean
    done
done

exit ${status}
